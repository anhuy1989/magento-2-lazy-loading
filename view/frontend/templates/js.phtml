<script>
    if (!!window.IntersectionObserver) {
        let imageObserver = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.src = entry.target.dataset.src;
                    observer.unobserve(entry.target);
                    entry.target.classList.remove('mplazyload-blur');
                    entry.target.classList.remove('mplazyload-icon');
                    entry.target.classList.remove('mplazyload-cms');
                }
            });
        }, {
            root: document.querySelector('.page-wrapper'),
            rootMargin: "0px",
            threshold: 1.0,
        });
        document.querySelectorAll('img.mplazyload').forEach((img) => {
            imageObserver.observe(img);
        });

        require(['jquery'], function ($) {
            $(document).ajaxComplete(function (event, xhr, settings) {
                if (settings.url.indexOf("shopbyAjax=1") > 0) {
                    document.querySelectorAll('img.mplazyload').forEach((img) => {
                        imageObserver.observe(img);
                    });
                }
            });
        });
    } else {
        require([
            'jquery',
            'lazyLoading',
            'domReady!'
        ], function ($) {
            $('.mplazyload').lazy({
                threshold: <?= /** @noEscape */ $block->getThreshold() ?>,
                afterLoad: function (e) {
                    e.removeClass('mplazyload-blur');
                    e.removeClass('mplazyload-icon');
                    e.removeClass('mplazyload-cms');
                }
            });
        });
    }

</script>

<style>
    img.mplazyload-icon {
        width: <?= /** @noEscape */ $block->getResizeWith() . 'px' ?> !important;
        height: <?= /** @noEscape */ $block->getResizeHeight() . 'px' ?> !important;
    }

    img.mplazyload-blur {
        transition: 0.3s filter linear;
        -o-transition: 0.3s -o-filter linear;
        -webkit-filter: blur(5px);
        filter: blur(5px);
    }
</style>
