define(
    [
        'jquery',
        'lazyLoad'
    ], function ($) {
        "use strict";

        $.widget(
            'mageplaza.mplazyload',
            {
                _create: function () {
                    $('.mplazyload').lazy({
                        threshold: 200,
                        effect: "fadeIn",
                        effectTime: 1000,
                        afterLoad: function (e) {
                            e.removeClass('mplazyload-blur');
                            e.removeClass('mplazyload-icon');
                            e.removeClass('mplazyload-cms');
                        }
                    });
                }
            });

        return $.mageplaza.mplazyload;
    }
);
